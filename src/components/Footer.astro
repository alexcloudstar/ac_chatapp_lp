<style>
  footer {
    background-color: #333;
    color: #fff;
    padding: 20px 50px;
  }

  .contact {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    text-align: center;
  }

  .contact h5 {
    font-family: var(--fontSecondary);
    font-size: 1.5rem;
    font-weight: 400;
    margin: 0;
  }

  .contact a {
    color: #fff;
  }

  .copyright {
    margin-top: 1.5rem;
    text-align: center;
  }

  @media (max-width: 1999px) {
    .contact {
      flex-direction: column;
      text-align: center;
    }

    .contact h5 {
      margin: 1rem 0 0.5rem;
    }
  }

  @media (min-width: 1200px) {
  }
</style>
